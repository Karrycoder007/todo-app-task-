{
  "compilerOptions": {
    "target": "ES2020", // modern JS
    "module": "CommonJS", // Node-friendly module system
    "outDir": "./server", // compiled JS output
    "rootDir": "./server", // source folder for backend
    "strict": true,
    "esModuleInterop": true, // allow default imports for CJS modules
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "server/**/*.ts",
    ".next/types/**/*.ts"
  ], // include only backend folder
  "exclude": [
    "node_modules"
  ]
}
